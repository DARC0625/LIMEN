# Backend Environment Variables (Example)
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=18443
# PORT: Custom port for backend API (default: 18443, changed from 8080 for security)
# Note: Update firewall rules to allow this port
BIND_ADDRESS=10.0.0.110
# BIND_ADDRESS: Server bind address
#   - "10.0.0.110" = WSL IP (default for WSL environment)
#   - "0.0.0.0" = bind to all interfaces
#   - "127.0.0.1" = bind only to localhost
# BIND_ADDRESS: Server bind address
#   - "0.0.0.0" or "" = bind to all interfaces (default for development)
#   - "10.0.0.100" = bind only to internal network interface (recommended for production)
#   - "127.0.0.1" = bind only to localhost
GRPC_PORT=9090
ENV=development

# Database (Postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=limen
DB_SSL_MODE=disable
# Or use full connection string:
# DATABASE_URL=postgres://user:password@localhost:5432/limen?sslmode=disable

# Libvirt / KVM
LIBVIRT_URI=qemu:///system

# File System Paths
ISO_DIR=/path/to/limen/database/iso
VM_DIR=/path/to/limen/database/vms

# Security / Auth
ADMIN_USER=admin
ADMIN_PASSWORD=change-this-password-immediately
JWT_SECRET=super-secret-key-change-me-in-production
TOKEN_EXPIRY_HOURS=24

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://example.com
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
# RATE_LIMIT_RPS: Maximum requests per second per IP
# RATE_LIMIT_BURST: Maximum burst size

# IP Whitelist for Admin Endpoints
# ADMIN_IP_WHITELIST: Comma-separated list of IP addresses or CIDR ranges
# Empty = allow all IPs (no restriction)
# Examples:
#   ADMIN_IP_WHITELIST=192.168.1.100,10.0.0.0/8
#   ADMIN_IP_WHITELIST=127.0.0.1,::1
# ADMIN_IP_WHITELIST=

# Alerting Configuration
ALERTING_ENABLED=false
# ALERTING_ENABLED: Enable alerting system

# Webhook Alert Channel (Slack, Discord, etc.)
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Alert Channel
ALERT_EMAIL_ENABLED=false
# ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
# ALERT_EMAIL_SMTP_PORT=587
# ALERT_EMAIL_SMTP_USER=your-email@gmail.com
# ALERT_EMAIL_SMTP_PASS=your-app-password
# ALERT_EMAIL_FROM=limen@yourdomain.com
# ALERT_EMAIL_TO=admin@yourdomain.com,ops@yourdomain.com

# Alert Deduplication Window (minutes)
ALERT_DEDUP_WINDOW=5
# ALERT_DEDUP_WINDOW: Prevent duplicate alerts within this time window

