{
  "name": "limen-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "LIMEN - VM Management Platform Frontend",
  "scripts": {
    "dev": "PORT=9444 next dev --turbo --port 9444",
    "build": "rm -rf .next node_modules/.cache && next build --turbo",
    "build:clean": "rm -rf .next node_modules/.cache .next/cache && next build --turbo",
    "build:verify": "rm -rf .next node_modules/.cache && next build && node scripts/patch-novnc-bundle.js && node -e \"const fs=require('fs');const chunks=fs.readdirSync('.next/static/chunks').filter(f=>f.endsWith('.js'));const css=fs.readdirSync('.next/static/chunks').filter(f=>f.endsWith('.css'));if(chunks.length===0){console.error('❌ 빌드 파일이 없습니다!');process.exit(1);}if(css.length===0){console.error('❌ CSS 파일이 없습니다!');process.exit(1);}console.log('✅ 빌드 파일 검증 완료:',chunks.length,'개 JS 파일,',css.length,'개 CSS 파일');\"",
    "build:analyze": "ANALYZE=true next build --webpack && node scripts/patch-novnc-bundle.js",
    "build:analyze:turbo": "ANALYZE=true next build --turbo && node scripts/patch-novnc-bundle.js",
    "start": "PORT=9444 next start --port 9444",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npx playwright test e2e/token-refresh.spec.ts",
    "test:e2e:ui": "npx playwright test --ui e2e/token-refresh.spec.ts",
    "test:e2e:debug": "npx playwright test --debug e2e/token-refresh.spec.ts",
    "test:e2e:integration": "npx playwright test e2e/vm-console-e2e.spec.ts e2e/compatibility.spec.ts",
    "lint": "eslint . --max-warnings 50",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky install",
    "manage": "./scripts/manage.sh",
    "restart": "./scripts/manage.sh restart limen",
    "restart:all": "./scripts/manage.sh restart all",
    "pm2:setup": "./scripts/manage.sh pm2 setup",
    "pm2:logs": "./scripts/manage.sh pm2 logs",
    "clean": "./scripts/manage.sh clean"
  },
  "dependencies": {
    "@novnc/novnc": "^1.7.0-beta",
    "@tanstack/react-query": "^5.90.12",
    "autoprefixer": "^10.4.22",
    "next": "^16.1.1",
    "pm2": "^6.0.14",
    "process": "^0.11.10",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "^16.1.1",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^16.1.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.5.2",
    "node-fetch": "^2.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.52.0",
    "undici": "^7.18.2",
    "web-streams-polyfill": "^4.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
